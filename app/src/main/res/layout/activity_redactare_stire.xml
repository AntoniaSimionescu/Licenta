<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.RedactareStire">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbaradmin"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/main"
        tools:ignore="MissingConstraints,NewApi"
        tools:targetApi="jelly_bean">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@color/main"
            android:foregroundGravity="left"
            android:padding="0dp"
            android:src="@drawable/fundal"
            tools:ignore="ContentDescription"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbaradmin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="REDACTARE ȘTIRE"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="25dp" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="675dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbaradmin"
            android:columnCount="2"
            android:rowCount="75">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:text="Titlu:"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_titlu"/>


            <EditText
                android:layout_width="220dp"
                android:layout_height="25dp"
                android:layout_row="1"
                android:layout_column="1"
                android:hint="Introduceți titlul:"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:background="@drawable/style_completare"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:text="Descriere:"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_descriere"
                />
            <EditText
                android:layout_width="220dp"
                android:layout_height="25dp"
                android:layout_row="2"
                android:layout_column="1"
                android:hint="Introduceți descrierea:"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:background="@drawable/style_completare"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:text="Categorie:"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_categorie"/>
            <TextView
                android:id="@+id/textcategorie"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:text="Introduceți categorie:"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/style_completare"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:text="Știre:"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_stire"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:layout_width="220dp"
                android:layout_height="140dp"
                android:layout_row="4"
                android:layout_column="1"
                android:hint="Introduceți știrea:"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:background="@drawable/style_completare"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/buttonInapoi"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@drawable/style_button"
                android:layout_width="120dp"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="Înapoi"
                android:textSize="18dp"
                android:paddingLeft="12dp"
                app:backgroundTint="@null"
                android:layout_marginLeft="5dp" />

            <Button
                android:id="@+id/buttonPostare"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@drawable/style_button"
                android:layout_width="120dp"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="Postează"
                android:textSize="18dp"
                app:backgroundTint="@null"
                android:layout_gravity="center"
                android:paddingLeft="12dp"
                android:layout_marginLeft="50dp"/>
            <ImageView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:src="@drawable/illustration"
                android:layout_row="6"
                android:layout_column="1"
                android:layout_marginLeft="-120dp"/>
        </GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>