<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client.Cont">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/contact_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/main"
        tools:ignore="MissingConstraints,NewApi"
        tools:targetApi="jelly_bean">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@color/main"
            android:foregroundGravity="left"
            android:padding="0dp"
            android:src="@drawable/fundal"
            tools:ignore="ContentDescription" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btninapoi"
            android:background="@drawable/style_button"
            android:drawableLeft="@drawable/ic_inapoi"
            app:backgroundTint="@null"
            android:layout_marginLeft="0dp"
            android:padding="0dp"/>

    </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/contact_toolbar"
            android:columnCount="1"
            android:rowCount="2"
            android:id="@+id/gridlayout"
            android:background="@color/white"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style_button"
                android:columnCount="2"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:rowCount="3" >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_user" />

                <TextView
                    android:id="@+id/numeprenume_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="NumePrenume"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <TextView
                    android:layout_row="2"
                    android:layout_column="0"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Email"
                    android:id="@+id/email_cont"
                    android:gravity="center"
                    android:layout_marginTop="-7dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="10dp"/>

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:background="@drawable/style_completare"
                android:columnCount="1"
                android:orientation="vertical"
                android:padding="10dp"
                android:rowCount="12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="DETALII CONT"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:drawableLeft="@drawable/ic_user"
                    android:text="NUME:"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/nume_cont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_marginTop="-3dp"
                    android:layout_column="0"
                    android:layout_marginLeft="23dp"
                    android:textColor="@color/umbra"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:drawableLeft="@drawable/ic_nume"
                    android:text="PRENUME:"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/prenume_cont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_marginTop="-3dp"
                    android:layout_marginLeft="23dp"
                    android:textColor="@color/umbra"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:drawableLeft="@drawable/ic_email"
                    android:text="EMAIL:"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/email_cont2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="6"
                    android:layout_marginTop="-3dp"
                    android:layout_column="0"
                    android:layout_marginLeft="23dp"
                    android:textColor="@color/umbra"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:drawableLeft="@drawable/ic_batalion"
                    android:text="BATALION:"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/batalion_cont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="8"
                    android:layout_column="0"
                    android:layout_marginTop="-3dp"
                    android:layout_marginLeft="23dp"
                    android:textColor="@color/umbra"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:drawableLeft="@drawable/ic_facultate"
                    android:text="FACULTATE:"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/facultate_cont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="10"
                    android:layout_column="0"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="-3dp"
                    android:textColor="@color/umbra"
                    android:textSize="15dp" />
                <ImageView
                    android:src="@drawable/illustration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintVertical_bias="0.0"/>




            </GridLayout>
        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>