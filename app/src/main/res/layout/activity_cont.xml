<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cont">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:rowCount="2"
            android:id="@+id/gridlayout"
            android:background="@color/white"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/style_button"
                android:columnCount="2"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:rowCount="3" >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_user" />

                <TextView
                    android:id="@+id/numeprenume_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="NumePrenume"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:layout_row="2"
                    android:layout_column="0"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Email"
                    android:id="@+id/email_cont"
                    android:gravity="center"
                    android:layout_marginTop="-7dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="425dp"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:background="@drawable/style_completare"
                android:columnCount="1"
                android:orientation="vertical"
                android:padding="10dp"
                android:rowCount="12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="DETALII CONT"
                    android:textColor="@color/black"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:drawableLeft="@drawable/ic_user"
                    android:text="NUME:"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/nume_cont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_marginTop="-3dp"
                    android:layout_column="0"
                    android:layout_marginLeft="23dp"
                    android:textColor="@color/umbra"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:drawableLeft="@drawable/ic_nume"
                    android:text="PRENUME:"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/prenume_cont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_marginTop="-3dp"
                    android:layout_marginLeft="23dp"
                    android:textColor="@color/umbra"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:drawableLeft="@drawable/ic_email"
                    android:text="EMAIL:"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/email_cont2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="6"
                    android:layout_marginTop="-3dp"
                    android:layout_column="0"
                    android:layout_marginLeft="23dp"
                    android:textColor="@color/umbra"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:drawableLeft="@drawable/ic_batalion"
                    android:text="BATALION:"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/batalion_cont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="8"
                    android:layout_column="0"
                    android:layout_marginTop="-3dp"
                    android:layout_marginLeft="23dp"
                    android:textColor="@color/umbra"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:drawableLeft="@drawable/ic_facultate"
                    android:text="FACULTATE:"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/facultate_cont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="10"
                    android:layout_column="0"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="-3dp"
                    android:textColor="@color/umbra"
                    android:textSize="17dp" />
                <ImageView
                    android:src="@drawable/illustration"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/black"
                    android:layout_height="80dp"
                    android:layout_marginTop="0dp"
                    android:layout_row="11"/>




            </GridLayout>
        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>