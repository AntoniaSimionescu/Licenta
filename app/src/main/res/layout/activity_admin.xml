<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.Admin">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbaradmin"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/main"
        tools:ignore="MissingConstraints,NewApi"
        tools:targetApi="jelly_bean">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@color/main"
        android:foregroundGravity="left"
        android:padding="0dp"
        android:src="@drawable/fundal"
        tools:ignore="ContentDescription" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbaradmin"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="675dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Domnule/Doamnă,"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/numeprenume_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:fontFamily="@font/poppinsmedium"
                android:layout_column="0"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="NumePrenume"
                android:textColor="@color/black"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selectați din variantele de mai jos categoria în care se încadrează știrea dumneavoastră:"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="6"
                android:columnCount="2">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:id="@+id/batalion1btn"
                    android:text="batalionul 1 studenți"
                    android:textAlignment="center"
                    android:paddingLeft="5dp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:background="@drawable/style_button"
                    android:layout_margin="20dp"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:id="@+id/batalion2btn"
                    android:paddingLeft="5dp"
                    android:layout_margin="20dp"
                    android:text="batalionul 2 studenți"
                    android:textAlignment="center"
                    android:layout_marginLeft="-5dp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:background="@drawable/style_button"/>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:id="@+id/batalion3btn"
                    android:text="batalionul 3 studenți"
                    android:textAlignment="center"
                    android:paddingLeft="5dp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:background="@drawable/style_button"
                    android:layout_margin="20dp"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:id="@+id/batalion4btn"
                    android:paddingLeft="5dp"
                    android:layout_margin="20dp"
                    android:text="batalionul 4 studenți"
                    android:textAlignment="center"
                    android:layout_marginLeft="-5dp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:background="@drawable/style_button"/>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:id="@+id/facultateAbtn"
                    android:text="Facultatea A"
                    android:textAlignment="center"
                    android:paddingLeft="5dp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:background="@drawable/style_button"
                    android:layout_margin="20dp"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:id="@+id/facultateBbtn"
                    android:paddingLeft="5dp"
                    android:layout_margin="20dp"
                    android:text="Facultatea B"
                    android:textAlignment="center"
                    android:layout_marginLeft="-5dp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:background="@drawable/style_button"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:id="@+id/facultateCbtn"
                    android:text="Facultatea C"
                    android:textAlignment="center"
                    android:paddingLeft="5dp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:background="@drawable/style_button"
                    android:layout_margin="20dp"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:paddingLeft="5dp"
                    android:layout_margin="20dp"
                    android:id="@+id/facultateEbtn"
                    android:text="Facultatea E"
                    android:textAlignment="center"
                    android:layout_marginLeft="-5dp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:background="@drawable/style_button"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:id="@+id/interesgeneralbtn"
                    android:text="Interes general"
                    android:textAlignment="center"
                    android:paddingLeft="5dp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:background="@drawable/style_button"
                    android:layout_margin="20dp"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:paddingLeft="5dp"
                    android:id="@+id/asatmbtn"
                    android:layout_margin="20dp"
                    android:text="AS ATM"
                    android:textAlignment="center"
                    android:layout_marginLeft="-5dp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:background="@drawable/style_button"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:id="@+id/cabinetmedicalbtn"
                    android:text="CABINET MEDICAL"
                    android:textAlignment="center"
                    android:paddingLeft="5dp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:background="@drawable/style_button"
                    android:layout_margin="20dp"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:id="@+id/sportbtn"
                    android:paddingLeft="5dp"
                    android:layout_margin="20dp"
                    android:text="SPORT"
                    android:textAlignment="center"
                    android:layout_marginLeft="-5dp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:background="@drawable/style_button"/>

            </GridLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>