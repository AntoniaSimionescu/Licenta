<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="2dp"
    app:cardCornerRadius="20dp"
    android:id="@+id/cardviewgestionare">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/numeprenume"
            android:layout_marginBottom="3dp"
            android:paddingStart="5dp"
            android:textColor="@color/black"
            android:text="@string/nume_prenume"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adresa_email"
            android:layout_marginBottom="3dp"
            android:paddingStart="5dp"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:text="@string/email"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batalion: "
                android:paddingStart="5dp"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="@color/black"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/valoarebatalion"
                android:text="BAT"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facultate: "
                android:paddingStart="5dp"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="@color/black"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/valoarefacultate"
                android:text="FAC"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:id="@+id/butonAccept"
                android:text="ACCEPTARE"
                android:onClick="doAcceptare"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_gravity="start"
                android:background="@drawable/style_button_accept"
                app:backgroundTint="@null"/>
            <Button
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:onClick="doRefuzare"
                android:text="REFUZARE"
                android:id="@+id/butonRefuz"
                android:textSize="15sp"
                android:gravity="center"
                android:background="@drawable/style_button_refuzare"
                app:backgroundTint="@null"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>