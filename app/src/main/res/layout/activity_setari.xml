<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client.Setari">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/contact_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/main"
        tools:ignore="MissingConstraints,NewApi"
        tools:targetApi="jelly_bean">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@color/main"
            android:foregroundGravity="left"
            android:padding="0dp"
            android:src="@drawable/fundal"
            tools:ignore="ContentDescription" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btninapoi"
            android:background="@drawable/style_button"
            android:drawableLeft="@drawable/ic_inapoi"
            app:backgroundTint="@null"
            android:layout_marginLeft="0dp"
            android:padding="0dp"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESETARE PAROLĂ"
            android:gravity="center"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parolă actuală:"
            android:layout_margin="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_password"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:paddingStart="2dp"/>
        <EditText
            android:id="@+id/parola_client"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:background="@drawable/style_completare"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:textSize="15dp"
            android:fontFamily="@font/poppinsmedium"
            android:inputType="textPassword"
            android:hint="Introduceți parola actuală!"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parolă nouă:"
            android:layout_margin="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_resetare_parola"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:paddingStart="2dp"/>
        <EditText
            android:id="@+id/parola_noua_client"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:background="@drawable/style_completare"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:textSize="15dp"
            android:fontFamily="@font/poppinsmedium"
            android:inputType="textPassword"
            android:hint="Introduceți parola nouă!"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parolă confirmată:"
            android:layout_margin="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_confirmare_parola"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:paddingStart="2dp"/>
        <EditText
            android:id="@+id/parola_confirmata_client"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:background="@drawable/style_completare"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:textSize="15dp"
            android:fontFamily="@font/poppinsmedium"
            android:inputType="textPassword"
            android:hint="Confirmați parola nouă!"/>

        <Button
            android:id="@+id/buttonResetareClient"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@drawable/style_button"
            android:layout_width="120dp"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="RESETARE"
            android:textSize="18dp"
            app:backgroundTint="@null"
            android:layout_gravity="center"
            android:paddingLeft="12dp"
            />
        <ImageView
            android:src="@drawable/illustration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>